root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = false

[*.proto]
indent_style = space
indent_size = 2

[*.go]
indent_style = tab
indent_size = 4

[*.json]
indent_style = space
indent_size = 2

[*.sh]
indent_style = space
indent_size = 2